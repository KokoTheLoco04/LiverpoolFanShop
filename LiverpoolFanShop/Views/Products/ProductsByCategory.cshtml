@model IEnumerable<LiverpoolFanShop.Core.Models.Product.ProductViewModel>
@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string username = string.Empty;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        username = User.FindFirstValue(LiverpoolFanShop.Infrastructure.Constants.CustomClaims.UserFullNameClaim) ?? string.Empty;
        isAdmin = User.IsInRole("Admin");
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products - Liverpool FC Fan Shop</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .product-card {
            transition: transform 0.2s;
            height: 100%; /* Ensures card fills available space */
        }

            .product-card:hover {
                transform: scale(1.05);
            }

        img {
            width: 100%; /* Set a fixed width */
            height: 250px; /* Set a fixed height */
            object-fit: contain; /* Ensures the image covers the area without distortion */
            object-position: center;
        }

        footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.9); /* Slightly opaque background */
            border-top: 1px solid #ddd;
            margin-top: 30px;
        }

            footer .contact-info {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                width: 100%;
                padding-bottom: 10px;
            }

                footer .contact-info div {
                    flex: 1;
                    padding: 5px;
                }

                    footer .contact-info div span {
                        display: block;
                        margin-bottom: 5px;
                    }

                    footer .contact-info div a {
                        color: #007bff;
                        text-decoration: none;
                    }

                        footer .contact-info div a:hover {
                            text-decoration: underline;
                        }

            footer p.copyright {
                margin: 0;
            }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background: url('/images/layout/anfield.jpg') no-repeat center center fixed;
            background-size: cover;
            background-attachment: fixed;
        }

        .navbar {
            background-color: rgba(200, 16, 46, 0.9); /* Liverpool red */
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .navbar-nav .nav-item a .fa-cart-shopping {
            font-size: 1.2rem;
            margin-right: 5px; /* Adjust spacing */
        }

        .navbar-text {
            margin-left: 10px; /* Add space between the cart icon and username */
        }

        .title-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .details-text {
            color: black;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="title-container">
            <h1 class="text-center details-text">Products</h1>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card product-card">
                        <img src="@product.ImageUrl" class="card-img-top product-img" alt="@product.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</p>
                            <a href="~/Products/Details/@product.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
