@model LiverpoolFanShop.Core.Models.Product.ProductDetailsViewModel

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name - Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .details-img {
            height: 300px;
            object-fit: contain;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>@Model.Name</h1>
        <div class="row">
            <div class="col-md-6">
                <!-- Display product image with updated path -->
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid details-img" />
            </div>
            <div class="col-md-6">
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <p><strong>Amount in Stock:</strong> @Model.AmountInStock</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <a href="~/Products/ProductsByCategory/@Model.Category.Id" class="btn btn-primary">Back to Category</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
