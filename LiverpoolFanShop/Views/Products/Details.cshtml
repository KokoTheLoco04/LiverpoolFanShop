@model LiverpoolFanShop.Core.Models.Product.ProductDetailsViewModel
@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string username = string.Empty;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        username = User.FindFirstValue(LiverpoolFanShop.Infrastructure.Constants.CustomClaims.UserFullNameClaim) ?? string.Empty;
        isAdmin = User.IsInRole("Admin");
    }
}



<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name - Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        img {
            height: 300px;
            object-fit: contain;
            width: 100%;
        }

        footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.9); /* Slightly opaque background */
            border-top: 1px solid #ddd;
            margin-top: 30px;
        }

            footer .contact-info {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                width: 100%;
                padding-bottom: 10px;
            }

                footer .contact-info div {
                    flex: 1;
                    padding: 5px;
                }

                    footer .contact-info div span {
                        display: block;
                        margin-bottom: 5px;
                    }

                    footer .contact-info div a {
                        color: #007bff;
                        text-decoration: none;
                    }

                        footer .contact-info div a:hover {
                            text-decoration: underline;
                        }

            footer p.copyright {
                margin: 0;
            }

        .navbar {
            background-color: rgba(200, 16, 46, 0.9); /* Liverpool red */
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .details-text {
            color: rgba(0, 0, 0, 0.85); /* White nuance */
            font-weight: bold;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background: url('/images/layout/anfield.jpg') no-repeat center center fixed;
            background-size: cover;
            background-attachment: fixed;
        }

        .container {
            max-width: 80%;
            margin: auto;
            margin-top: 70px;
            background-color: rgba(255, 255, 255, 0.9); /* Slightly opaque background */
            border-radius: 10px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <a class="navbar-brand" href="/">Liverpool FC Fan Shop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <span class="navbar-text">Hello, @username!</span>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link" style="color: white;">Logout</button>
                        </form>
                    </li>
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/AddProduct">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/EditProduct">Edit Product</a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>@Model.Name</h1>
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" />
            </div>
            <div class="col-md-6 details-text">
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <p><strong>Amount in Stock:</strong> @Model.AmountInStock</p>
                <p><strong>Description:</strong> @Model.Description</p>

                <!-- Action button (like Add to Cart or Go Back) -->
                <a href="@Url.Action("ProductsByCategory", "Products", new { id = Model.Category.Id })" class="btn btn-primary">Back to Category</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
