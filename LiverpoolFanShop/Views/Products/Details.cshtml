@model LiverpoolFanShop.Core.Models.Product.ProductDetailsViewModel
@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string username = string.Empty;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        username = User.FindFirstValue(LiverpoolFanShop.Infrastructure.Constants.CustomClaims.UserFullNameClaim) ?? string.Empty;
        isAdmin = User.IsInRole("Admin");
    }
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}


<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name - Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>

        img {
            height: auto;
            width: 100%;
            object-fit: contain;
            margin-bottom: 20px;
            max-height: 350px; /* Limits the height of tall images */
            object-position: center;
        }

        footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.9);
            border-top: 1px solid #ddd;
            margin-top: 30px;
        }

            footer .contact-info {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                width: 100%;
                padding-bottom: 10px;
            }

                footer .contact-info div {
                    flex: 1;
                    padding: 5px;
                }

                    footer .contact-info div span {
                        display: block;
                        margin-bottom: 5px;
                    }

                    footer .contact-info div a {
                        color: #007bff;
                        text-decoration: none;
                    }

                        footer .contact-info div a:hover {
                            text-decoration: underline;
                        }

            footer p.copyright {
                margin: 0;
            }

        .navbar {
            background-color: rgba(200, 16, 46, 0.9);
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .navbar-nav .nav-item a .fa-cart-shopping {
            font-size: 1.2rem;
            margin-right: 5px; /* Adjust spacing */
        }

        .navbar-text {
            margin-left: 10px; /* Add space between the cart icon and username */
        }

        .details-text {
            color: rgba(0, 0, 0, 0.85);
            font-weight: bold;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background: url('/images/layout/anfield.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .container {
            max-width: 80%;
            margin: auto;
            margin-top: 70px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 20px;
        }

        .button-container {
            display: flex;
            justify-content: flex-start;
            gap: 15px;
            margin-top: 20px;
        }

        .button-container button,
        .button-container a {
            flex: 1;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <a class="navbar-brand" href="/">Liverpool FC Fan Shop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item d-flex align-items-center">
                        <!-- Cart Icon -->
                        <a class="nav-link text-white" href="/Carts/Cart">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <span class="navbar-text">Hello, @username!</span>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link" style="color: white;">Logout</button>
                        </form>
                    </li>
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/AddProduct">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/EditProduct">Edit Product</a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="text-center">@Model.Name</h1> <!-- Title centered -->
        <!-- Flex container to arrange the image and details side by side -->
        <div class="row mt-3">
            <div class="col-md-6 d-flex flex-column align-items-center">
                <!-- Column for image -->
                <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image" />
            </div>

            <!-- Column for details (on the right of the image) -->
            <div class="col-md-6 details-text">
                <p><strong>Price:</strong> @Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <p><strong>Amount in Stock:</strong> @Model.AmountInStock</p>
                <p><strong>Description:</strong> @Model.Description</p>

                <form method="post" asp-action="AddToCart" asp-controller="Carts">
                    <input type="hidden" name="ProductId" value="@Model.Id" />
                    <input type="hidden" name="ApplicationUserId" value="@UserManager.GetUserId(User)" />
                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" name="Amount" value="1" min="1" class="form-control" />
                    </div>
                    <div class="button-container">
                        <a href="@Url.Action("ProductsByCategory", "Products", new { id = Model.Category.Id })" class="btn btn-primary">Back to Category</a>
                        <button type="submit" class="btn btn-success">Add to Cart</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
