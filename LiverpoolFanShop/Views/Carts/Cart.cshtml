@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string username = string.Empty;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        username = User.FindFirstValue(LiverpoolFanShop.Infrastructure.Constants.CustomClaims.UserFullNameClaim) ?? string.Empty;
        isAdmin = User.IsInRole("Admin");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Shopping Cart</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            background: url('/images/layout/shoppingCartLogo.jpg') no-repeat center center fixed;
            background-size: cover;
            background-attachment: fixed; 
            background-position: center; 
            margin: 0;
            padding: 0;
        }

        h2.text-danger {
            font-size: 2.5rem;
            font-weight: bold;
            text-transform: uppercase;
            background-color: white;
            border-radius: 5px;
            border: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .cart-item-container {
            display: flex;
            flex-direction: column;
            margin-top: 30px;
        }

        .cart-item {
            display: flex;
            align-items: center;
            background-color: white;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 10px;
        }

            .cart-item img {
                width: 100px;
                height: auto;
                max-height: 100px;
                object-fit: contain;
                margin-right: 15px;
                object-position: center;
            }

        .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .cart-item .card-title .cart-item .card-text{
            font-size: 1rem;
            font-weight: bold;
            background-color: white;
            padding: 5px;
            border-radius: 5px;
            margin-bottom: 5px;
        }

        .btn-custom {
            font-size: 0.9rem;
            font-weight: bold;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
            margin-top: 5px;
        }

        .btn-custom-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

            .btn-custom-danger:hover {
                background-color: #c82333;
            }

        .btn-custom-warning {
            background-color: #ffc107;
            color: white;
            border: none;
        }

            .btn-custom-warning:hover {
                background-color: #e0a800;
            }

        .total-container {
            background-color: #ffffff;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            text-align: center;
            max-width: 500px;
            margin: 20px auto;
        }

            .total-container h3 {
                font-size: 1.25rem;
                font-weight: bold;
                margin-bottom: 10px;
            }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

            .action-buttons button {
                width: 100%;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                border: none;
                font-size: 0.9rem;
                font-weight: bold;
            }

            .action-buttons .btn-danger {
                background-color: #dc3545;
                color: white;
            }

            .action-buttons .btn-success {
                background-color: #ffc107;
                color: white;
            }

            .action-buttons button:hover {
                opacity: 0.8;
                color: black;
            }

        .quantity-update {
            display: flex; /* Align elements side by side */
            align-items: center; /* Vertically align input and button */
            gap: 5px; /* Small gap between the input and button */
            justify-content: flex-start; /* Ensure alignment to the left */
        }

            .quantity-update input {
                width: 60px; /* Narrow input field */
                height: 35px; /* Match button height */
                font-size: 0.9rem; /* Smaller font size */
                text-align: center; /* Center-align number inside input */
                margin: 0; /* Remove any default margins */
                padding: 0 5px; /* Minimal padding */
                box-sizing: border-box; /* Ensure padding is included in width */
            }

            .quantity-update button {
                height: 35px; /* Match input height */
                font-size: 0.9rem; /* Consistent font size with input */
                padding: 0 10px; /* Adjust button size */
                margin: 0; /* Remove any extra margins */
                box-sizing: border-box; /* Ensure proper sizing */
            }

        .empty-cart {
            text-align: center;
            font-size: 1.25rem;
            color: #6c757d;
        }

        footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.9);
            border-top: 1px solid #ddd;
            margin-top: 30px;
        }

            footer .contact-info {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                width: 100%;
                padding-bottom: 10px;
            }

                footer .contact-info div {
                    flex: 1;
                    padding: 5px;
                }

                    footer .contact-info div span {
                        display: block;
                        margin-bottom: 5px;
                    }

                    footer .contact-info div a {
                        color: #007bff;
                        text-decoration: none;
                    }

                        footer .contact-info div a:hover {
                            text-decoration: underline;
                        }

            footer p.copyright {
                margin: 0;
            }

        .navbar {
            background-color: rgba(200, 16, 46, 0.9);
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .navbar-nav .nav-item a .fa-cart-shopping {
            font-size: 1.2rem;
            margin-right: 5px; /* Adjust spacing */
        }

        .navbar-text {
            margin-left: 10px; /* Add space between the cart icon and username */
        }
    </style>
</head>
<body>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Success"]
        </div>
    }

    <h2 class="text-center text-danger mb-4">Your Shopping Cart</h2>

    @if (Model.ShoppingCartProducts == null || Model.ShoppingCartProducts.Count == 0)
    {
        <div class="alert alert-info text-center">
            <p>Your cart is empty. <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Browse products</a></p>
        </div>
    }
    else
    {
        <div class="cart-item-container">
            @foreach (var item in Model.ShoppingCartProducts)
            {
                <div class="cart-item">
                    <img src="@item.ImageUrl" alt="@item.ProductName" />
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">Price: @item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</p>
                        <p class="card-text">Quantity: @item.Amount</p>
                        <form method="post" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-custom btn-custom-danger">Remove from Cart</button>
                        </form>
                        <form method="post" asp-action="UpdateQuantity" asp-route-productId="@item.ProductId" class="quantity-update mt-2">
                            @Html.AntiForgeryToken()
                            <input type="number" name="quantity" value="@item.Amount" min="1" class="form-control" />
                            <button type="submit" class="btn btn-custom btn-custom-warning">Update Quantity</button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <div class="total-container">
            <h3>Total: @ViewBag.CartTotal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</h3>
            <div class="action-buttons">
                <form method="post" asp-action="ClearCart">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Clear Cart</button>
                </form>
                <form method="post" asp-action="Checkout">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">Finish Order</button>
                </form>
            </div>
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
