@model LiverpoolFanShop.Core.Models.Order.MakeOrderInputViewModel
@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Checkout";

    // Retrieve current user data using UserManager
    var currentUser = UserManager.GetUserAsync(User).Result;
    var firstName = currentUser?.FirstName ?? string.Empty; // Default to empty if null
    var lastName = currentUser?.LastName ?? string.Empty;
    var email = currentUser?.Email ?? string.Empty;
}

<h2 class="text-center text-danger">Checkout</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Error"]
    </div>
}

<form method="post" asp-controller="Order" asp-action="FinishOrder">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" class="form-control" name="FirstName" value="@firstName" required />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" class="form-control" name="LastName" value="@lastName" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" class="form-control" name="Email" value="@email" readonly />
    </div>
    <div class="form-group">
        <label for="Address">Shipping Address</label>
        <textarea id="Address" class="form-control" name="Address" required>@Model.Address</textarea>
    </div>
    <input type="hidden" name="ShoppingCartId" value="@Model.ShoppingCartId" />
    <div class="text-center mt-4">
        <h4>Total Amount: @ViewBag.CartTotal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</h4>
        <button type="submit" class="btn btn-success">Complete Order</button>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
