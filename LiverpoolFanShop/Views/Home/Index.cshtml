@model IEnumerable<LiverpoolFanShop.Core.Models.Category.ProductCategoryModel>
@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string username = string.Empty;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        username = User.FindFirstValue(LiverpoolFanShop.Infrastructure.Constants.CustomClaims.UserFullNameClaim) ?? string.Empty;
        isAdmin = User.IsInRole("Admin");
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Liverpool FC Fan Shop</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #c8102e; /* Liverpool red */
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .category-card {
            transition: transform 0.2s;
        }

            .category-card:hover {
                transform: scale(1.05);
            }

        .container {
            margin-top: 60px; /* Ensure content doesn't hide under fixed navbar */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <a class="navbar-brand" href="/">Liverpool FC Fan Shop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <span class="navbar-text">Hello, @username!</span>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link" style="color: white;">Logout</button>
                        </form>
                    </li>
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/AddProduct">Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/EditProduct">Edit Product</a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <h1 class="text-center">Shop by Category</h1>
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card category-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">@category.Name</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    @if (isAdmin)
    {
        <div class="mt-4 p-5 bg-light text-center">
            <h2 class="display-4">Hello, Admin!</h2>
            <p class="lead mb-1 mt-3">This is your administrator area - you can <b>read</b>, <b>create</b>, <b>delete</b> and <b>edit</b> products. <br />You can <b>view</b> and <b>manage</b> all users and orders in the system.</p>
        </div>
    }
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
