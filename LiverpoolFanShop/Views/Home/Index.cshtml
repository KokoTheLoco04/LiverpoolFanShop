@model IEnumerable<LiverpoolFanShop.Core.Models.Category.ProductCategoryModel>
@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string username = string.Empty;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        username = User.FindFirstValue(LiverpoolFanShop.Infrastructure.Constants.CustomClaims.UserFullNameClaim) ?? string.Empty;
        isAdmin = User.IsInRole("Admin");
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Liverpool FC Fan Shop</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background: url('/images/layout/anfield.jpg') no-repeat center center fixed;
            background-size: cover;
            background-attachment: fixed;
        }

        .navbar {
            background-color: rgba(200, 16, 46, 0.9); /* Liverpool red */
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .navbar-nav .nav-item a .fa-cart-shopping {
            font-size: 1.2rem;
            margin-right: 5px; /* Adjust spacing */
        }

        .navbar-text {
            margin-left: 10px; /* Add space between the cart icon and username */
        }

        .container {
            max-width: 80%;
            margin: auto;
            margin-top: 60px;
            background-color: rgba(255, 255, 255, 0.9); /* Slightly opaque background */
            border-radius: 10px;
            padding: 20px;
        }

        .category-card {
            transition: transform 0.2s;
        }

            .category-card:hover {
                transform: scale(1.05);
            }
        .card-title{
            color: black;
        }

        .category-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .category-card {
            width: 200px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 15px;
            background-color: rgba(255, 255, 255, 0.9); /* Slightly opaque background */
            border-top: 1px solid #ddd;
            margin-top: 30px;
        }

            footer .contact-info {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                width: 100%;
                padding-bottom: 10px;
            }

                footer .contact-info div {
                    flex: 1;
                    padding: 5px;
                }

                    footer .contact-info div span {
                        display: block;
                        margin-bottom: 5px;
                    }

                    footer .contact-info div a {
                        color: #007bff;
                        text-decoration: none;
                    }

                        footer .contact-info div a:hover {
                            text-decoration: underline;
                        }

            footer p.copyright {
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Shop by Category</h1>
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card category-card">
                        <div class="card-body text-center">
                            <a asp-controller="Products" asp-action="ProductsByCategory" asp-route-id="@category.Id">
                            <h5 class="card-title">@category.Name</h5>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    @if (isAdmin)
    {
        <div class="mt-4 p-5 bg-light text-center">
            <h2 class="display-4">Hello, Admin!</h2>
            <p class="lead mb-1 mt-3">This is your administrator area - you can <b>read</b>, <b>create</b>, <b>delete</b> and <b>edit</b> products. <br />You can <b>view</b> and <b>manage</b> all users and orders in the system.</p>
        </div>
    }
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
