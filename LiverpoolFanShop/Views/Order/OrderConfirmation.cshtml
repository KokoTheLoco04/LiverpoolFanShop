@model LiverpoolFanShop.Core.Models.Order.OrderViewModel

<div class="container mt-4">
    <h1>Order Confirmation</h1>
    <p>Thank you for your purchase, @Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName!</p>
    <p>Your order has been placed successfully and will be shipped to:</p>
    <p><strong>@Model.Address</strong></p>

    <h4>Order Summary:</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderProducts)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>£@item.Product.Price.ToString("F2")</td>
                    <td>£@(item.Quantity * item.Product.Price).ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h4>Total Amount: £@Model.TotalAmount.ToString("F2")</h4>
    </div>

    <a href="/" class="btn btn-primary">Continue Shopping</a>
</div>
