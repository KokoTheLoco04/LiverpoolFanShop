@model LiverpoolFanShop.Core.Models.Order.OrderViewModel
@using Microsoft.AspNetCore.Identity
@using LiverpoolFanShop.Infrastructure.Data.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@using System.Security.Claims

@{
    TimeZoneInfo timeZone = TimeZoneInfo.FindSystemTimeZoneById("E. Europe Standard Time");

    DateTime localDate = TimeZoneInfo.ConvertTimeFromUtc(Model.CreatedOn, timeZone);
}

@{
    string username = string.Empty;

    bool isAdmin = false;



    if (SignInManager.IsSignedIn(User))

    {

        username = User.FindFirstValue(LiverpoolFanShop.Infrastructure.Constants.CustomClaims.UserFullNameClaim) ?? string.Empty;

        isAdmin = User.IsInRole("Admin");

    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation - Liverpool FC</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body, html {
            background: url('/images/layout/orderConfirmation.jpeg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .order-container {
            background-color: rgba(255, 255, 255, 0.9);
            color: #333;
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h2, h3 {
            color: #c8102e; /* Liverpool Red */
            font-weight: bold;
        }

        .table {
            background-color: white;
        }

        .table thead th {
            background-color: #c8102e;
            color: white;
        }

        .btn {
            background-color: #c8102e;
            color: white;
            font-weight: bold;
            border: none;
        }

        .btn:hover {
            background-color: #a50e1d;
        }

        .order-details {
            margin-bottom: 20px;
        }

        .thank-you {
            color: #c8102e;
            font-size: 1.2rem;
            font-weight: bold;
            text-align: center;
        }

        footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.9);
            border-top: 1px solid #ddd;
            margin-top: 30px;
            color: #333;
        }

            footer .contact-info {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                width: 100%;
                padding-bottom: 10px;
            }

                footer .contact-info div {
                    flex: 1;
                    padding: 5px;
                }

                    footer .contact-info div span {
                        display: block;
                        margin-bottom: 5px;
                    }

                    footer .contact-info div a {
                        color: #007bff;
                        text-decoration: none;
                    }

                        footer .contact-info div a:hover {
                            text-decoration: underline;
                        }

            footer p.copyright {
                margin: 0;
            }

        .navbar {
            background-color: rgba(200, 16, 46, 0.9);
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

        .navbar-nav .nav-item a .fa-cart-shopping {
            font-size: 1.2rem;
            margin-right: 5px;
        }

        .navbar-text {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="order-container">
        <h2 class="text-center">Order Confirmation</h2>
        <p class="thank-you text-center">Thank you for your order!</p>

        <div class="order-details">
            <p><strong>Order Number:</strong> @Model.Id</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Order Date:</strong> @localDate.ToString("g")</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</p>
        </div>

        <h3>Products:</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.OrderProducts)

                {
                    <tr>
                        <td>@product.Product?.Name</td>
                        <td>@product.Quantity</td>
                        <td>@product.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Shop</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
