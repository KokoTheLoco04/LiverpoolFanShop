@model IEnumerable<ProductDetailsViewModel>

@{
    ViewData["Title"] = "Edit Products";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Products</h2>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Price (£)</th>
                <th scope="col">Stock</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@(product.Category?.Name ?? "Uncategorized")</td>
                        <td>@product.Price.ToString("F2")</td>
                        <td>@product.AmountInStock</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No products available to edit.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
